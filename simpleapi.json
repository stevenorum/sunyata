{
    "profile": "default",
    "regions": "us-east-1",
    "name":"SunyataTest",
    "description":"Sunyata-deployed API stack",
    "stages": ["alpha"],
    "lambdas": [
        {
            "name":"SunyataFunction",
            "runtime":"python2.7",
            "handler":"lambda_handler.lambda_handler",
            "file":"lambda_handler.py",
            "directory":"lambda_handler",
            "description":"Sunyata-deployed lambda function.",
            "timeout":3,
            "memory":128,
            "role":"dynamoRead"
            }
        ],
    "paths": [
        {
            "path":"/",
            "function":"SunyataFunction"
        },
        {
            "path":"/sunyata",
            "function":"SunyataFunction"
        },
        {
            "path":"/sunyata/fancy",
            "function":"SunyataFunction",
            "extra":{"path":["/sunyata/fancy"]},
            "querystring_params":{"id":"identifier"}
        }
    ],
    "roles": {
        "dynamoRead":[
        {
            "Effect": "Allow",
            "Action": "logs:CreateLogGroup",
            "Resource": { "Fn::Join" : [ ":", [ "arn:aws:logs",{"Ref" : "AWS::Region"},{ "Ref" : "AWS::AccountId" },"*" ] ] }
        },
        {
            "Effect": "Allow",
            "Action": [
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Resource": { "Fn::Join" : [ ":", [ "arn:aws:logs",{"Ref" : "AWS::Region"},{ "Ref" : "AWS::AccountId" },"log-group:/aws/lambda/*" ] ] }
        },
        {
            "Effect": "Allow",
            "Action": [
                "dynamodb:Describe*",
                "dynamodb:Get*",
                "dynamodb:List*"
            ],
            "Resource": "*"
        }
    ]
    }
}
